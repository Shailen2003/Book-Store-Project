    <script>
        // Select all book cards
        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll(".add-to-cart-form").forEach(form => {
                form.addEventListener("submit", (event) => {
                    event.preventDefault(); // Prevent default form submission

                    let bookCard = form.closest(".book-card"); // Get the closest book card
                    let bookId = bookCard?.getAttribute("data-book-id") || ""; // Get bookId safely
                    let bookName = bookCard?.querySelector(".book-title")?.innerText.trim() || "";
                    let bookPrice = parseFloat(bookCard?.querySelector(".book-price")?.innerText.replace("â‚¹", "").trim()) || 0;
                    let bookImage = bookCard?.querySelector(".book-image")?.src || "";

                    // Debugging: Check if bookId is being retrieved correctly
                    console.log("Submitting book:", { bookId, bookName, bookPrice, bookImage });

                    if (!bookId) {
                        alert("Error: Book ID is missing!"); // Alert if bookId is not found
                        return;
                    }

                    // Ensure inputs exist before setting values
                    let bookIdInput = form.querySelector("input[name='bookId']");
                    let nameInput = form.querySelector("input[name='name']");
                    let priceInput = form.querySelector("input[name='price']");
                    let imageInput = form.querySelector("input[name='image']");

                    if (!bookIdInput || !nameInput || !priceInput || !imageInput) {
                        console.error("Error: Form inputs are missing!");
                        return;
                    }

                    // Set hidden input values
                    bookIdInput.value = bookId;
                    nameInput.value = bookName;
                    priceInput.value = bookPrice;
                    imageInput.value = bookImage;

                    // Submit the form after setting values
                    form.submit();
                });
            });
        });

        // Select elements
        const menuIcon = document.getElementById("menu-icon");
        const sidebar = document.getElementById("sidebar");
        const closeSidebar = document.getElementById("close-sidebar");
        const overlay = document.getElementById("overlay");

        // Open Sidebar
        menuIcon.addEventListener("click", () => {
            sidebar.classList.remove("-translate-x-full");
            overlay.classList.remove("hidden");
        });

        // Close Sidebar
        closeSidebar.addEventListener("click", () => {
            sidebar.classList.add("-translate-x-full");
            overlay.classList.add("hidden");
        });

        // Close Sidebar when clicking outside
        overlay.addEventListener("click", () => {
            sidebar.classList.add("-translate-x-full");
            overlay.classList.add("hidden");
        });

    </script>
